{
  "openapi": "3.1.0",
  "info": {
    "title": "API ÉCHO",
    "version": "2.0.0",
    "description": "Analyse statistique locale sans IA générative, conçue pour ChatGPT Actions."
  },
  "servers": [
    { "url": "https://resonanceia.vercel.app", "description": "Déploiement Vercel" },
    { "url": "http://localhost:3000", "description": "Développement local" }
  ],
  "paths": {
    "/api/echo": {
      "post": {
        "summary": "Analyse un message et renvoie pivot, noyau, périphérie et écho poétique.",
        "operationId": "postEcho",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "Texte utilisateur à analyser"
                  }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Analyse réussie",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/EchoResponse" }
              }
            }
          },
          "400": { "description": "Requête invalide" },
          "405": { "description": "Méthode non supportée" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EchoResponse": {
        "type": "object",
        "properties": {
          "pivot": { "type": "string" },
          "noyau": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Top 3 des co-occurrences du pivot"
          },
          "peripherie": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Autres mots uniques"
          },
          "cooccurrences": {
            "type": "object",
            "additionalProperties": { "type": "integer" },
            "description": "Comptes de co-occurrence pour le pivot"
          },
          "centralite": { "type": "integer" },
          "metaphore": { "type": "string" },
          "echo": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
