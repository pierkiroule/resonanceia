{
  "openapi": "3.1.0",
  "info": {
    "title": "API ÉCHO – Résonance locale",
    "version": "1.0.0",
    "description": "Analyse statistique locale sans IA générative. Retourne pivot, noyau, périphérie, cooccurrences, centralité et métaphore."
  },
  "servers": [
    { "url": "https://<votre-service>.onrender.com", "description": "Déploiement Render" },
    { "url": "http://localhost:3000", "description": "Développement local" }
  ],
  "paths": {
    "/api/echo": {
      "post": {
        "summary": "Analyse un message et renvoie l'écho structuré.",
        "operationId": "echo_exterieur",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "Texte utilisateur à analyser"
                  }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Écho calculé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/EchoResponse" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EchoResponse": {
        "type": "object",
        "properties": {
          "pivot": { "type": "string", "nullable": true },
          "noyau": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Top 3 des cooccurrences du pivot"
          },
          "peripherie": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Autres mots uniques"
          },
          "cooccurrences": {
            "type": "object",
            "additionalProperties": { "type": "integer" },
            "description": "Fréquence des cooccurrences autour du pivot"
          },
          "centralite": { "type": "number", "description": "Score pivot + cooccurrences / total mots" },
          "metaphore": { "type": "string" },
          "echo": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["noyau", "peripherie", "cooccurrences", "centralite", "metaphore", "echo", "tags"]
      }
    }
  }
}
