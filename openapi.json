{
  "openapi": "3.1.0",
  "info": {
    "title": "EmojiRéso",
    "version": "1.0.0",
    "description": "API d'écho sémiotique basée uniquement sur des emojis"
  },
  "paths": {
    "/api/emojireso": {
      "get": {
        "summary": "Récupérer l'état courant du réseau emoji",
        "responses": {
          "200": {
            "description": "État du réseau",
            "content": {"application/json": {"schema": {"$ref": "#/components/schemas/EmojiReseau"}}}
          }
        }
      },
      "post": {
        "summary": "Ajouter des emojis et renvoyer l'écho sémiotique",
        "operationId": "emojiso",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "session": {"type": "string"},
                  "emojis": {
                    "type": "array",
                    "items": {"type": "string"},
                    "minItems": 1
                  }
                },
                "required": ["emojis"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Réseau mis à jour",
            "content": {"application/json": {"schema": {"$ref": "#/components/schemas/EmojiReseau"}}}
          }
        }
      }
    },
    "/api/emojireso/reset": {
      "post": {
        "summary": "Réinitialiser la base SQLite",
        "responses": {"200": {"description": "Base vidée"}}
      }
    }
  },
  "components": {
    "schemas": {
      "EmojiReseau": {
        "type": "object",
        "properties": {
          "central": {"type": "array", "items": {"type": "string"}},
          "orbit": {"type": "array", "items": {"type": "string"}},
          "isolated": {"type": "array", "items": {"type": "string"}},
          "emerging": {"type": "array", "items": {"type": "string"}},
          "graph": {
            "type": "object",
            "properties": {
              "nodes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {"type": "string"},
                    "count": {"type": "integer"},
                    "centrality": {"type": "number"},
                    "density": {"type": "number"}
                  }
                }
              },
              "links": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "source": {"type": "string"},
                    "target": {"type": "string"},
                    "weight": {"type": "integer"}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
