{
  "openapi": "3.0.1",
  "info": {
    "title": "API Écho Résonante",
    "version": "1.0.0",
    "description": "API minimale pour pousser un texte, stocker des occurrences SQLite et récupérer le graph Courtial/Callon"
  },
  "paths": {
    "/api/push": {
      "post": {
        "summary": "Analyse et stockage d'un texte",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "angoisse controle respiration"
                  }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Analyse Courtial/Callon",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "pivot": { "type": "string" },
                    "noyau": { "type": "array", "items": { "type": "string" } },
                    "peripherie": { "type": "array", "items": { "type": "string" } },
                    "satellites": { "type": "array", "items": { "type": "string" } },
                    "clusters": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "tag": { "type": "string" },
                          "emoji": { "type": "string" },
                          "intensite": { "type": "number" }
                        }
                      }
                    },
                    "coeffs": {
                      "type": "object",
                      "properties": {
                        "densite": { "type": "number" },
                        "emergence": { "type": "number" },
                        "centralite": { "type": "number" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Requête invalide" }
        }
      }
    },
    "/api/graph": {
      "get": {
        "summary": "Graph Courtial/Callon",
        "responses": {
          "200": {
            "description": "Nodes et liens courants",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nodes": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "count": { "type": "integer" },
                          "centrality": { "type": "integer" }
                        }
                      }
                    },
                    "links": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "source": { "type": "string" },
                          "target": { "type": "string" },
                          "weight": { "type": "integer" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
